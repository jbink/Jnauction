<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/my_purchase_list_layout_back"
            android:onClick="onClick"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true">
            <Button
                android:id="@+id/my_purchase_list_btn_back"
                android:onClick="onClick"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_back"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="매입 완료"
            android:textColor="@color/WHITE"
            android:textSize="19dp"
            android:textStyle="bold" />

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/WHITE"
        android:paddingLeft="12dp"
        android:paddingRight="19dp">

        <TextView
            android:id="@+id/my_purchase_txt_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#f36430"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="8.5sp"
            android:text="X대"/>

        <RelativeLayout
            android:id="@+id/my_purchase_layout_btn_term"
            android:onClick="onClick"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/my_purchase_layout_term"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/my_purchase_txt_term"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:text="오늘"/>
                <Button
                    android:id="@+id/my_purchase_btn_term"
                    android:onClick="onClick"
                    android:layout_marginLeft="6.5dp"
                    android:layout_width="13.5dp"
                    android:layout_height="13.5dp"
                    android:background="@drawable/ic_date_arrow_r"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1.5dp"
                android:background="@color/colorPrimary"
                android:layout_below="@id/my_purchase_layout_term"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@id/my_purchase_layout_term"
                android:layout_alignEnd="@id/my_purchase_layout_term"/>
        </RelativeLayout>
        
    </RelativeLayout>

    <ListView
        android:layout_marginTop="6dp"
        android:id="@+id/my_purchase_listview"
        android:layout_width="match_parent"
        android:dividerHeight="6dp"
        android:divider="@color/default_background"
        android:layout_height="match_parent"/>


</LinearLayout>