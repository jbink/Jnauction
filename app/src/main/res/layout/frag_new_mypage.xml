<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 레이아웃 마이페이지 -->
    <ScrollView
        android:id="@+id/main_layout_scr_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="35dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:background="@color/WHITE"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="109dp"
                    android:layout_height="109dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/profile_default" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/user_pic_frame" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[인증딜러] "
                        android:textColor="@color/colorPrimary"
                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/main_user_txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XXX"
                        android:textColor="#333333"
                        android:textSize="19dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="님 안녕하세요."
                        android:textColor="#333333"
                        android:textSize="19dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/main_user_txt_license_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textColor="#99333333"
                    android:textSize="16dp"
                    android:text="서비스 시작일 [2017.06.21]" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/main_user_txt_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="010-1234-5678"
                        android:textColor="#333333"
                        android:textSize="17dp" />

                    <Button
                        android:layout_width="37dp"
                        android:layout_height="21dp"
                        android:layout_marginLeft="7dp"
                        android:background="#999999"
                        android:text="변경"
                        android:textColor="@color/WHITE"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d8d8d8" />

            <!-- 나의 입찰 정보 -->
            <LinearLayout
                android:id="@+id/main_user_layout_bid_info"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/WHITE"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나의 입찰 정보"
                    android:textColor="#333333"
                    android:textSize="17dp" />

                <ImageButton
                    android:id="@+id/main_user_btn_bid_info"
                    android:layout_marginLeft="7dp"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:onClick="onClick"
                    android:background="@drawable/btn_info"/>

            </LinearLayout>
            <!-- END : 입찰 성공 -->
            <!-- 입찰 성공 -->
            <RelativeLayout
                android:id="@+id/main_user_btn_seccess"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@color/WHITE"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입찰 성공"
                    android:textColor="#333333"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘 "
                        android:textColor="@color/text_color_999999"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/main_user_txt_bid_success_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대 / 전체 "
                        android:textColor="@color/text_color_999999"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/main_user_txt_bid_success_entire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X"
                        android:textColor="@color/text_color_333333"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대"
                        android:textColor="@color/text_color_999999"
                        android:textSize="16dp" />
                </LinearLayout>
            </RelativeLayout>
            <!-- END : 입찰 성공 -->
            <!-- 나의 입찰차량 -->
            <RelativeLayout
                android:id="@+id/main_user_btn_bid"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@color/WHITE"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나의 입찰차량"
                    android:textColor="#333333"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘 "
                        android:textColor="@color/text_color_999999"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/main_user_txt_bid_my_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대 / 전체 "
                        android:textColor="@color/text_color_999999"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/main_user_txt_bid_my_entire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X"
                        android:textColor="@color/text_color_333333"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대"
                        android:textColor="@color/text_color_999999"
                        android:textSize="16dp" />
                </LinearLayout>
            </RelativeLayout>
            <!-- END : 나의 입찰차량 -->
            <!-- 매입 확정 -->
            <RelativeLayout
                android:id="@+id/main_user_btn_purchase"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@color/WHITE"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="매입 확정"
                    android:textColor="#333333"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘 "
                        android:textColor="@color/text_color_999999"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/main_user_txt_bid_complete_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대 / 전체 "
                        android:textColor="@color/text_color_999999"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/main_user_txt_bid_complete_entire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X"
                        android:textColor="@color/text_color_333333"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대"
                        android:textColor="@color/text_color_999999"
                        android:textSize="16dp" />
                </LinearLayout>
            </RelativeLayout>
            <!-- END : 매입 확정 -->
            <!-- 이번달 입찰 건수 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@color/WHITE"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이번달 입찰 기본 건수"
                    android:textColor="#333333"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/main_user_txt_monthly_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X"
                        android:textColor="@color/colorPrimary"
                        android:textSize="19dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/50"
                        android:textColor="@color/text_color_999999"
                        android:textSize="19dp" />
                </LinearLayout>
            </RelativeLayout>
            <!-- END : 매입 확정 -->

            <!--기본 건수 매월-->
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#999999"
                android:lineSpacingExtra="9sp"
                android:text="기본 건수 매월 50건 제공"/>
            <!-- END :  기본 건수 매월 -->

            <!-- 매입 확정 보너스건수 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="13dp"
                android:background="@color/WHITE"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="매입확정 보너스 건수"
                    android:textColor="#333333"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/main_user_txt_extra_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X"
                        android:textColor="@color/text_color_blue"
                        android:textSize="19dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대"
                        android:textColor="@color/text_color_999999"
                        android:textSize="19dp" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#4d4d4d"
                android:layout_marginTop="35dp"
                android:text="고객센터 1234-5678"/>
            <!-- END : 매입 확정 보너스건수 -->
        </LinearLayout>
        <!-- END :  마이페이지 -->
    </ScrollView>

</LinearLayout>