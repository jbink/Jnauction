<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/WHITE"
    android:padding="18dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ing_intro"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:weightSum="3"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_edt_phone"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:layout_weight="1.9"
            android:hint="휴대폰번호"
            android:inputType="number"
            android:background="@drawable/border"/>

        <Button
            android:id="@+id/login_btn_request"
            android:onClick="onClick"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:layout_weight="1.1"
            android:background="@drawable/sel_btn_auth_number"/>

    </LinearLayout>


    <EditText
        android:id="@+id/login_edt_auth"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:inputType="number"
        android:textSize="16dp"
        android:hint="인증번호 입력"
        android:background="@drawable/border"/>
    <Button
        android:id="@+id/login_btn_login"
        android:onClick="onClick"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/sel_btn_login"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

         <CheckBox
            android:id="@+id/login_chk_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:button="@drawable/checkbox_background"/>

        <TextView
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:text="자동로그인"
            android:textSize="15dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고객센터 1234-5678"
            android:textSize="16dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>