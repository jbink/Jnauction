<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="126dp"
    android:orientation="vertical"
    android:background="@color/WHITE"
    android:padding="15dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_centerVertical="true"
            android:id="@+id/row_success_layout_thumbnail"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/row_success_img_thumbnail"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/row_success_layout_status_300"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/HALF_TRANSPARENT" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:text="입찰 성공"/>
                <TextView
                    android:id="@+id/row_success_txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorPrimary"
                    android:text="[XX.XX XX:XX]"/>
            </LinearLayout>

        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@id/row_success_layout_thumbnail">

            <TextView
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/row_success_txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:textColor="#333333"
                android:text="쌍용 티볼리"/>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/row_success_txt_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textColor="#999999"
                    android:text="2016년식"/>
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="17dp"
                    android:background="#d0d0d0"/>
                <TextView
                    android:id="@+id/row_success_txt_kms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textColor="#999999"
                    android:text="40,000km"/>
            </LinearLayout>
            <TextView
                android:id="@+id/row_success_txt_loc_addr"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#999999"
                android:lines="1"
                android:ellipsize="end"
                android:text="서울 마포구"/>

        </LinearLayout>


        
    </RelativeLayout>

</LinearLayout>