<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/my_success_layout_back"
            android:onClick="onClick"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true">
            <Button
                android:id="@+id/my_success_btn_back"
                android:onClick="onClick"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_back"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="입찰성공"
            android:textColor="@color/WHITE"
            android:textSize="19dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/my_success_detail_btn_buy"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:background="#272727"
            android:onClick="onClick"
            android:text="입찰 완료된 차량입니다."
            android:textColor="@color/WHITE"
            android:textSize="19dp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/my_success_detail_btn_buy">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/my_success_detail_pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <!-- 넘버링 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="11dp"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:id="@+id/my_success_detail_txt_pager_index"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="X"
                            android:textColor="#80ffffff"
                            android:textSize="18dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="/4"
                            android:textColor="#80ffffff"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <!-- END : 넘버링 -->

                    <!-- 인덱스 -->
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/my_success_detail_layout_index"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <!-- 사진설명 -->
                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="20dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/HALF_TRANSPARENT_A0"
                            android:padding="6dp">

                            <TextView
                                android:id="@+id/my_success_detail_txt_bid_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="입찰완료 : XXXX.XX.XX"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18dp" />

                        </RelativeLayout>



                    </LinearLayout>


                </RelativeLayout>

                <!-- 차이름, 차넘버 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@color/WHITE"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/my_success_detail_txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BMW 3-series 320i"
                        android:textColor="@color/text_color_333333"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/my_success_detail_txt_car_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="경기 63다 7788"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20dp" />

                        <ImageButton
                            android:visibility="gone"
                            android:layout_width="110dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/sel_btn_history"/>
                    </LinearLayout>
                </LinearLayout>
                <!-- END : 차이름, 차넘버 -->

                <!-- 2010, 50000, 경기성남 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/WHITE"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/my_success_detail_txt_car_year"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="2010년"
                        android:textColor="@color/text_color_333333"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:background="#e6e6e6" />

                    <TextView
                        android:id="@+id/my_success_detail_txt_car_kms"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="50,000km"
                        android:textColor="@color/text_color_333333"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:background="#e6e6e6" />

                    <TextView
                        android:id="@+id/my_success_detail_txt_car_loc_addr"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="경기도 성남시"
                        android:textColor="@color/text_color_333333"
                        android:textSize="16dp" />

                </LinearLayout>
                <!-- END : 2010, 50000, 경기성남 -->
                <!-- 평균입찰가 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/WHITE"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:lineSpacingExtra="17sp"
                        android:text="최고 입찰가"
                        android:textColor="#999999"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                    <TextView
                        android:layout_marginRight="10dp"
                        android:id="@+id/my_success_detail_txt_car_max_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="XXXX만원"
                        android:textColor="#fc622a"
                        android:textSize="36dp" />

                    </LinearLayout>

                </RelativeLayout>
                <!-- END 평균입찰가 -->
                <include layout="@layout/include_member_info" />
                <include layout="@layout/include_car_base_option" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>