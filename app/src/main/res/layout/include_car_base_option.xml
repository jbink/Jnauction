<?xml version="1.0" encoding="utf-8"?><!-- 차량 상세정보 Text 모음 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:background="@color/WHITE"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">
    <!-- 기본정보 -->
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="기본정보"
            android:textColor="@color/text_color_999999"
            android:textSize="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/text_color_999999"
            android:textSize="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/text_color_999999"
            android:textSize="16dp" />
    </LinearLayout>
    <!-- END : 기본정보 -->
    <!-- 변속기 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="변속기"
            android:textColor="@color/text_color_999999"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/cas_ops_trans"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="center_vertical"
            android:text="오토"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/text_color_333333"
            android:textSize="16dp" />
    </LinearLayout>
    <!-- END : 변속기 -->
    <!-- 사고유무 -->
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="사고유무"
            android:textColor="@color/text_color_999999"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/cas_ops_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="center_vertical"
            android:text="무사고차량"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/text_color_333333"
            android:textSize="16dp" />
    </LinearLayout>
    <!-- END : 사고유무 -->
    <!-- 연료종류 -->
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="연료종류"
            android:textColor="@color/text_color_999999"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/cas_ops_fuel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="center_vertical"
            android:text="휘발유"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/text_color_333333"
            android:textSize="16dp" />
    </LinearLayout>
    <!-- END : 연료종류 -->

    <!-- 옵션정보 -->
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="옵션정보"
            android:textColor="@color/text_color_999999"
            android:textSize="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/text_color_333333"
            android:textSize="16dp" />
    </LinearLayout>
    <!-- 네비게이션, 썬루프, 제조사 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/cas_ops_navi_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_navi_on" />

            </RelativeLayout>

            <TextView
                android:id="@+id/cas_ops_navi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="네비게이션"
                android:textColor="@color/text_color_999999"
                android:textSize="16dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/cas_ops_sroof_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_sun_on" />
            </RelativeLayout>

            <TextView
                android:id="@+id/cas_ops_sroof"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="썬루프"
                android:textColor="@color/text_color_999999"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/cas_ops_as_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_as_on" />
            </RelativeLayout>

            <TextView
                android:id="@+id/cas_ops_as"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="제조사A/S"
                android:textColor="@color/text_color_999999"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>
    <!-- END : 네비게이션, 썬루프, 제조사 -->

    <!-- 후방감지센서, 후방카메라, 블랙박스 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/cas_ops_rsensor_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_sensor_on" />
            </RelativeLayout>

            <TextView
                android:id="@+id/cas_ops_rsensor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="후방감지센서"
                android:textColor="@color/text_color_999999"
                android:textSize="16dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/cas_ops_rcam_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_camera_on" />
            </RelativeLayout>

            <TextView
                android:id="@+id/cas_ops_rcam"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="후방카메라"
                android:textColor="@color/text_color_999999"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/cas_ops_bbox_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_blackbox_on" />
            </RelativeLayout>

            <TextView
                android:id="@+id/cas_ops_bbox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="블랙박스"
                android:textColor="@color/text_color_999999"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>
    <!-- END : 후방감지센서, 후방카메라, 블랙박스 -->
    <!-- 스마트키, 열선시트, 통풍시트 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/cas_ops_skey_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_smartkey_on"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/cas_ops_skey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="스마트 키"
                android:textColor="@color/text_color_999999"
                android:textSize="16dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/cas_ops_heat_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_hotseat_on" />
            </RelativeLayout>

            <TextView
                android:id="@+id/cas_ops_heat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="열선시트"
                android:textColor="@color/text_color_999999"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/cas_ops_fan_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_windseat_on" />
            </RelativeLayout>

            <TextView
                android:id="@+id/cas_ops_fan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="통풍시트"
                android:textColor="@color/text_color_999999"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>
    <!-- END : 스마트 키, 열선시트, 통풍시트 -->
    <!-- 4륜구동, 알루미늄휠, 하이패스 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/cas_ops_4wd_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_4matic_on"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/cas_ops_4wd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="4륜구동"
                android:textColor="@color/text_color_999999"
                android:textSize="16dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/cas_ops_alu_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_wheel_on" />
            </RelativeLayout>

            <TextView
                android:id="@+id/cas_ops_alu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="알루미늄휠"
                android:textColor="@color/text_color_999999"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/cas_ops_hipass_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_hipass_on" />
            </RelativeLayout>

            <TextView
                android:id="@+id/cas_ops_hipass"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="하이패스"
                android:textColor="@color/text_color_999999"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>
    <!-- END : 4륜구동, 알루미늄휠, 하이패스 -->

    <!-- END : 옵션정보 -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="20dp"
        android:background="#e6e6e6" />

    <!-- 기타설명 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WHITE"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:lineSpacingExtra="17sp"
            android:text="기타설명"
            android:textColor="#999999"
            android:textSize="16dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_profile_default"/>
            <TextView
                android:id="@+id/cas_ops_memo"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_primary_solid"
                android:textSize="15dp"
                android:padding="15dp"
                android:textColor="@color/WHITE"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@color/WHITE" />
</LinearLayout><!-- END : 차량 상세정보 Text 모음 -->
